FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     FPVBuoyantFoamv1912;

startFrom       latestTime;

startTime       0.0;

stopAt          endTime;

endTime         5.0;

deltaT          1e-6;

writeControl    adjustableRunTime;

writeInterval   0.05;

purgeWrite      0;

writeFormat     ascii;

writePrecision  8;

writeCompression off;

timeFormat      general;

timePrecision   7;

runTimeModifiable true;

adjustTimeStep    yes;

maxCo           0.2;

maxDeltaT	2e-5;


functions
{
    fieldAve1
    {
        type            fieldAverage;
        libs ( "libfieldFunctionObjects.so" );
        enabled         true;
        timeStart       1.0; 
        timeEnd         5.0;
        writeControl   outputTime;

        fields
        (
            U
            {
                mean        on;
                prime2Mean  on;
                base        time;
            }

            p
            {
                mean        on;
                prime2Mean  on;
                base        time;
            }

            T
            {
                mean        on;
                prime2Mean  on;
                base        time;
            }
            Zmix
            {
                mean        on;
                prime2Mean  on;
                base        time;
            }

            rho
            {
                mean        on;
                prime2Mean  on;
                base        time;
            }

            Qdt
            {
                mean        on;
                prime2Mean  on;
                base        time;
            }

            chi
            {
                mean        on;
                prime2Mean  on;
                base        time;
            }
        );
    }

}
